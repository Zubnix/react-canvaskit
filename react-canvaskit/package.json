{
  "name": "react-canvaskit",
  "version": "0.0.1-alpha.7",
  "description": "A React implementation of the Skia-CanvasKit drawing library.",
  "keywords": [
    "react",
    "reactjs",
    "skia",
    "skia-library",
    "canvas",
    "webgl",
    "html5-canvas",
    "html5",
    "react-reconciler",
    "canvaskit",
    "accelerated",
    "hardware-acceleration"
  ],
  "type": "module",
  "main": "dist/index.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist types",
    "build": "tsc && typedoc --includeDeclarations --excludeExternals --excludeNotExported --excludePrivate --ignoreCompilerErrors --out docs --target es6 --theme minimal --mode modules --inputFiles src/index.ts --inputFiles src/ButtonEvent.ts --inputFiles src/AxisEvent.ts --inputFiles src/KeyEvent.ts --inputFiles src/lib/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "yarn lint && yarn test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "commitlint -E HUSKY_GIT_PARAMS"
  },
  "dependencies": {
    "react-reconciler": "0.26.1"
  },
  "peerDependencies": {
    "canvaskit-wasm": "0.19.0",
    "react": "17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.3",
    "@types/react-reconciler": "^0.18.0",
    "babel-jest": "^26.6.1",
    "canvaskit-wasm": "0.19.0",
    "colors": "^1.4.0",
    "commitizen": "^4.2.2",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "gl": "^4.8.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "jest-config": "^26.6.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "prompt": "^1.0.0",
    "react": "17.0.1",
    "react-devtools": "^4.9.0",
    "replace-in-file": "^6.1.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.2.1",
    "shelljs": "^0.8.4",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "author": "Erik De Rijcke",
  "homepage": "https://github.com/udevbe/react-canvaskit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/udevbe/react-canvaskit"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "compositor-module/node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
